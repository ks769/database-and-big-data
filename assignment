#Connect to the database in the backend
<?php
$serverName = "localhost";
$dbUsername = "root";
$dbPassword = "";
$dbName = "assignment";

$conn = mysqli_connect($serverName, $dbUsername, $dbPassword, $dbName);

if ($conn)
{
    echo "Connected";
}
elseif (!$conn)
{
    die("Connection failed" . mysqli_connect_error());
}
?>

