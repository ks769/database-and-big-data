#3 SQL queries
SELECT ENAME
FROM EMP 
WHERE DEPTNO_FK = 10

SELECT ENAME
FROM EMP 
WHERE DEPTNO_FK = 20

SELECT emp.ENAME
FROM sectiondb.emp
WHERE emp.hiredate < '1981-11-17'
